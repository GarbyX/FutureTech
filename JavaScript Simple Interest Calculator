<script>

alert("HMFB Nig. Ltd.  \n Simple Interest Calculation");
alert("Please enter only numbers or decimals. \n Symbols and Characters (* , : ; ! ? - + # @ /) are not allowed");

var p = prompt("Enter Principal Amount (Currency: Naira): ");
var r = prompt("Enter Rate (%): ");
var t = prompt("Enter Time (in months): ");

document.writeln("<h3> Current session data as received from registered User: </h3>"); 

// var r = R/100;

document.writeln("Principle: N" + p + "<br>"); 
document.writeln("Rate: " + r + "% <br>");
document.writeln("Time: " + t + "mth(s)<br>");

document.writeln("<h3> Calculation: </h3>"); 
var SI = (p*r*t)/100 ;
document.writeln("Simple Interest = (N" + p + " x " + r  + " x " + t  + " ) รท 100 = N" + SI );

document.writeln("<p> You will receive the sum of N" + SI/t + " into your bank account monthly until your investment period with HMFB<sup>&reg</sup> has elapsed. </p>");

document.writeln("<p> Thank you for banking with us. </p>");

</script>

